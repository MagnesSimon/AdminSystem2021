acl ip_interne {
        localhost;
        51.210.44.117;
};

// reseau externe
view external{
        match-clients{ any;};
        zone "wtl1-5.ephec-ti.be" IN {
                type master;
                file "/etc/bind/db.wtl1-5.ephec-ti.be";
        };
};

// reseau interne
view internal {
	match-clients {ip_interne;};
	recursion yes;
	allow-recursion {ip_interne;};
	zone "wtl1-5.ephec-ti.be IN {
		type master;
		file "/etc/bind/db.intranet.wtl1-5.ephec-ti.be";
	};
};

